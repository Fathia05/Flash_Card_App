<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Who was the 44th President of the United States?"
        android:textSize="40sp"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:elevation="8dp"/>

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:text="Barack Obama"
        android:textSize="35sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/flashcard_answer1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#add8e6"
        android:gravity="center"
        android:text="Barack Obama"
        android:textSize="30sp"
        android:layout_below="@id/flashcard_answer" />

    <TextView
        android:id="@+id/flashcard_answer2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#add8e6"
        android:gravity="center"
        android:text="George Bush"
        android:textSize="30sp"
        android:layout_below="@id/flashcard_answer1" />

    <TextView
        android:id="@+id/flashcard_answer3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#add8e6"
        android:gravity="center"
        android:text="Ayomide Olasupo"
        android:textSize="30sp"
        android:layout_below="@id/flashcard_answer2" />
</RelativeLayout>